{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "~commons/*": ["src/commons/*"],
      "~features/*": ["src/features/*"],

      // some of them will be deprecated and replaced by feature - common separation
      "~mocks/*": ["src/__mocks__/*"],
      // "~components/*": ["src/components/*"],
      "~config/*": ["src/config/*"],
      "~data-access/*": ["src/data-access/*"],
      "~data-mapper/*": ["src/data-mapper/*"],
      "~libs/*": ["src/libs/*"],
      "~pages/*": ["src/pages/*"],
      "~services/*": ["src/services/*"],
      "~store/*": ["src/store/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".hierarchy.ts"
  ],
  "exclude": ["node_modules"]
}
